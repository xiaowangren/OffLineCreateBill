<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout"
	xmlns:lay="sap.ui.commons.layout"
	xmlns:c="sap.ui.commons"
	xmlns:t="sap.ui.table"
	xmlns="sap.m" controllerName="com.zhenergy.bill.view.BillUpdateInfoPage" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="修改{newBillDetailUpdateInfoPage>/Ztypedes}">
		<content>
		<l:VerticalLayout class="BillCreateInfoPage_page_content_VerticalLayout">
		        <lay:MatrixLayout width="40%" widths="20%,25%,25%" class="BillCreateInfoPage_VerticalLayout_MatrixLayout_1">
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:Button text="提交" press="onUpdateBillInfo"></c:Button>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:Button text="取消" press="onCancleBillInfo"></c:Button>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:Button text="预览操作票" press="onPrintBillInfo"></c:Button>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:Button text="预览危险点" press="onPrintDangerousPoint"></c:Button>
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		        </lay:MatrixLayout>
		        <lay:MatrixLayout widths="7%,12%,7%,25%,5%,10%,6%,12%" class="BillCreateInfoPage_VerticalLayout_MatrixLayout_2">
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作票号"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="{newBillDetailUpdateInfoPage>/Zczph}" width="95%" id="dianQiCaoZuoPiaoHao4" editable="false"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="工厂"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="{newBillDetailUpdateInfoPage>/Iwerk} {newBillDetailUpdateInfoPage>/Name1}" width="95%" id="dianQiGongChang4" editable="false" tooltip="{/dianQiGongChang}"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="填写部门"></c:TextView>
		                </lay:MatrixLayoutCell><lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiTianXieBuMen4" items="{ path: '/tianxieBuMenQuery3'}" width="95%" selectedKey="{newBillDetailUpdateInfoPage>/Appdep}">
								<core:ListItem key="{Appdep}" text="{Appdep} {Appdepdec}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="班组"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiBanZu4" items="{ path: '/banZuQuery3'}" width="95%" selectedKey="{newBillDetailUpdateInfoPage>/Yxgroup}">
								<core:ListItem key="{Yxgroup}" text="{Yxgroup} {Yxgroupdec}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <!--<c:CheckBox text="不合格" enabled ="false" id="dianQiBuHeGe"></c:CheckBox>-->
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="类型"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="{newBillDetailUpdateInfoPage>/Ztype} {newBillDetailUpdateInfoPage>/Ztypedes}" width="95%" id="dianQiLeiXing4" editable="false" tooltip="{/dianQiLeiXing} {/dianQiLeiXingValue}"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作类型"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox width="95%" id="dianQiCaozuoLeiXing4" selectedKey="{newBillDetailUpdateInfoPage>/Otype}">
		                        <c:items>
                                    <core:ListItem text="1 单人操作" key="1"></core:ListItem>
                                    <core:ListItem text="2 监护操作" key="2"></core:ListItem>
                                </c:items>
		                    </c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作性质"></c:TextView>
		                </lay:MatrixLayoutCell><lay:MatrixLayoutCell>
		                    <c:ComboBox width="95%" id="dianQiCaoZuoXingZhi4" selectedKey="{newBillDetailUpdateInfoPage>/Zczfs}">
		                        <c:items>
                                    <core:ListItem text="1 一般操作" key="1"></core:ListItem>
                                    <core:ListItem text="2 重大操作" key="2"></core:ListItem>
                                </c:items>
		                    </c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="专业"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox width="95%" id="dianQiZhuanYe4"  selectedKey="{newBillDetailUpdateInfoPage>/Prfty}">
    		                        <c:items>
                                        <core:ListItem text="0001 汽机专业" key="0001"></core:ListItem>
                                        <core:ListItem text="0002 电气专业" key="0002"></core:ListItem>
                                        <core:ListItem text="0003 锅炉专业" key="0003"></core:ListItem>
                                        <core:ListItem text="0004 化学专业" key="0004"></core:ListItem>
                                        <core:ListItem text="0005 环保专业" key="0005"></core:ListItem>
                                        <core:ListItem text="0006 燃料专业" key="0006"></core:ListItem>
                                        <core:ListItem text="0007 热机专业" key="0007"></core:ListItem>
                                    </c:items>
		                    </c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <!--<c:CheckBox text="需要值长审核" id="dianQiXuYaoZhiZhangShenHe"></c:CheckBox>-->
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="运行区域"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiYunXingQuYu4" items="{ path: '/yunXingQuYuQuery3'}" width="95%" selectedKey="{newBillDetailUpdateInfoPage>/Rarea}">
								<core:ListItem key="{Rarea}" text="{Rarea} {Rareadec}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="机组"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiJiZu4" items="{ path: '/jiZuQuery3'}" width="95%" selectedKey="{newBillDetailUpdateInfoPage>/Unity}" >
								<core:ListItem key="{Unity}" text="{Unity} {Untxt}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="值别"></c:TextView>
		                </lay:MatrixLayoutCell><lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiZhiBie4" items="{ path: '/ZhiBieQuery3'}" width="95%" selectedKey="{newBillDetailUpdateInfoPage>/Dunum}">
								<core:ListItem key="{Dunum}" text="{Dunum} {Dutxt}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="状态"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="{newBillDetailUpdateInfoPage>/Estat} {newBillDetailUpdateInfoPage>/Estxt}" width="95%" id="dianQiZhuangTai4" editable="false"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="开票人"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView  text="{newBillDetailUpdateInfoPage>/Cuser}" id="dianQiKaiPiaoRen4"></c:TextView >
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView  text="开票日期" ></c:TextView >
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView  text="{newBillDetailUpdateInfoPage>/Cdata}" id="dianQiKaiPiaoRiQi4"></c:TextView >
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作任务"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell rowSpan="2" colSpan="4">
		                    <c:TextArea value="{newBillDetailUpdateInfoPage>/Ztask}" rows="5" cols="55" id="dianQiCaoZuoRenWu4"></c:TextArea>
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		        </lay:MatrixLayout>
		        <!--<mvc:JSView viewName="com.zhenergy.bill.view.BillQueryInfoTab"/>-->
		        <c:TabStrip height="380px">
		            <c:Tab text="操作内容">
		                <c:content>
		                    <Table
    		                    id="BillUpdateBaseInfoTab"
    			                    items="{newBillDetailUpdateInfoPage>/InfoTab}" >
    			                <columns>
            				<Column
            					minScreenWidth="Tablet"
            					demandPopin="true"
            					width="30px"
            					 >
            					<Text text="序号" />
            				</Column>
            				<Column
            					minScreenWidth="Tablet"
            					demandPopin="true"
            					width="320px"
            					>
            					<Text text="操作内容" />
            				</Column>
            				<Column
            					minScreenWidth="Tablet"
            					demandPopin="true"
            					width="120px"
            					>
            					<Text text="注意事项" />
            				</Column>
            			</columns>
            			<ColumnListItem>
            				<cells>
            					<c:TextField
            						value="{newBillDetailUpdateInfoPage>Zxh}" width="100%"/>
            					<c:TextField
            						value="{newBillDetailUpdateInfoPage>Zcznr}" width="100%"/>
            					<c:TextField
            						value="{newBillDetailUpdateInfoPage>Zzysx}" width="100%"/>
            				</cells>
            			</ColumnListItem>
    		           </Table>
		              </c:content>
		            </c:Tab>
		            <c:Tab text="危险点分析">
		                <c:content>
		                    <Table
    		                    id="idUpdateDangerousPointTab"
    			                    items="{newBillDetailUpdateInfoPage>/DangerousTab}" >
    			                <columns>
                				<Column
                					minScreenWidth="Tablet"
                					demandPopin="true"
                					width="50px"
                					>
                					<Text text="序号" />
                				</Column>
                				<Column
                					minScreenWidth="Tablet"
                					demandPopin="true"
                					width="320px"
                					>
                					<Text text="危险点" />
                				</Column>
                				<Column
                					minScreenWidth="Tablet"
                					demandPopin="true"
                					width="150px"
                					 >
                					<Text text="危害后果" />
                				</Column>
                				<Column
                					minScreenWidth="Tablet"
                					demandPopin="true"
                					width="150px"
                					>
                					<Text text="控制措施" />
                				</Column>
            			    </columns>
            			    <ColumnListItem type="Active">
                				<cells>
                					<c:TextField
                						value="{newBillDetailUpdateInfoPage>Dangno}" width="100%"/>
                					<c:TextField
                						value="{newBillDetailUpdateInfoPage>Zztext}" width="100%"/>
                					<c:TextField
                						value="{newBillDetailUpdateInfoPage>Zzremark}" width="100%"/>
                					<c:TextField
                						value="{newBillDetailUpdateInfoPage>Zzpltxt}" width="100%"/>
                				</cells>
            			    </ColumnListItem>
    		           </Table>
		              </c:content>
		            </c:Tab>
		        </c:TabStrip>
		        <lay:MatrixLayout width="100%" widths="5%,30%,25%,35%" class="BillCreateInfoPage_VerticalLayout_MatrixLayout_1">
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="备注"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell colSpan="3">
		                    <c:TextArea value="{newBillDetailUpdateInfoPage>/Znote}" rows="4" cols="150" id="dianQiBeiZhu4"></c:TextArea>
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		        </lay:MatrixLayout>
		    </l:VerticalLayout>
		</content>
	</Page>
</core:View>