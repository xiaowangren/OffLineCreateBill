<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout"
	xmlns:c="sap.ui.commons"
	xmlns:lay="sap.ui.commons.layout"
	xmlns="sap.m" controllerName="com.zhenergy.bill.view.GongZuoPiaoAqcs2" 
	xmlns:html="http://www.w3.org/1999/xhtml">
    <Table
        id="idAqcsDataTabY"
            items="{AQCSDataY>/}" >
        <columns>
    		<Column
    			minScreenWidth="Tablet"
    			demandPopin="true"
    			width="12px"
    			>
    		</Column>
    		<Column
    			minScreenWidth="Tablet"
    			demandPopin="true"
    			width="40px"
    			>
    		</Column>
    		<Column
    			minScreenWidth="Tablet"
    			demandPopin="true"
    			width="320px"
    			>
    		</Column>
		</columns>
	    <ColumnListItem type="Inactive">
			<cells>
                <c:Button icon="sap-icon://document-text"></c:Button>
				<c:TextView
					text="{AQCSDataY>Code}" width="100%"/>
				<c:TextView
					text="{AQCSDataY>Kurztext}" width="100%"/>
			</cells>
	    </ColumnListItem>
   </Table>
    <Table
        id="idAqcsTabY"
            items="{WorkModel>/AqcsTabY}" >
        <columns>
		<Column
			minScreenWidth="Tablet"
			demandPopin="true"
			width="40px"
			>
			<Text text="代码" />
		</Column>
		<Column
			minScreenWidth="Tablet"
			demandPopin="true"
			width="20px"
			>
			<Text text="序号" />
		</Column>
		<Column
			minScreenWidth="Tablet"
			demandPopin="true"
			width="320px"
			>
			<Text text="安全措施内容" />
		</Column>
<!--		<Column
			minScreenWidth="Tablet"
			demandPopin="true"
			width="20px"
			>
			<Text text="已执行" />
		</Column>
		<Column
			minScreenWidth="Tablet"
			demandPopin="true"
			width="110px"
			 >
			<Text text="执行情况" />
		</Column>-->
		<Column
			minScreenWidth="Tablet"
			demandPopin="true"
			width="12px"
			>
			<Text text="操作" visible="{/Editable}"/>
		</Column>
		<Column
			minScreenWidth="Tablet"
			demandPopin="true"
			width="4px"
			>
		</Column>
	    </columns>
	    <ColumnListItem type="Active">
			<cells>
                <c:ComboBox items="{ path: 'AQCSDataY>/', sorter: { path: 'AQCSDataY>Code' } }" 
                            selectedKey="{WorkModel>Code}"
                            change="onSelect"
                            editable="{/Editable}"
                            width="100%">
                    <core:ListItem key="{AQCSDataY>Code}" text="{AQCSDataY>Code}"></core:ListItem>
                </c:ComboBox>
				<c:TextView
					text="{WorkModel>Seqc}" width="100%"/>
                <c:TextField value="{WorkModel>Actext}"  width="100%" editable="{/Editable}"></c:TextField>
<!--                <c:CheckBox checked="{WorkModel>Comzx}" width="100%" editable="{/Editable}"/>
                <c:TextField value="{WorkModel>Zxqk}" width="100%" editable="{/Editable}"></c:TextField>-->
				<c:Button text="新增" press="onAddAqcs" visible="{/Editable}"></c:Button>
			    <c:Button text="删除" press="onDeleteAqcs" visible="{/Editable}"></c:Button>
			</cells>
	    </ColumnListItem>
   </Table>
</core:View>