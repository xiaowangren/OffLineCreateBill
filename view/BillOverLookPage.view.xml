<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" controllerName="com.zhenergy.bill.view.BillOverLookPage" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
	    title="两票离线处理平台"
		showHeader="true"
		enableScrolling="false" >
		<TileContainer
			id="container"
			tileDelete="handleTileDelete"
			width="80%"
			>
			<StandardTile
			    id="tileSync"
				icon="sap-icon://inbox"
				title="同步主数据"
				info="最近更新:{/lastSyncLog}"
				infoState="Success"
				press="onSyncMasterData">			<!-- press='onSyncMasterData///onSyncMasterClicked'-->
			</StandardTile>
			<StandardTile
			    id="tileCreateOT"
				icon="sap-icon://order-status"
				title="创建操作票"
				infoState="Success"  
				press="onNavigate">
				<!--<customData>-->
				<!--	<core:CustomData key="targetPage" value="BillInitializationPage">-->
				<!--	</core:CustomData>-->
				<!--</customData>-->
			</StandardTile>
			<StandardTile
			    id="tileModifyOT"
				icon="sap-icon://order-status"
				title="修改操作票"
				infoState="Error"
				press="onUpdateCaoZuoPiao">
				<!--<customData>-->
				<!--	<core:CustomData key="targetPage" value="BillInitializationPage">-->
				<!--	</core:CustomData>-->
				<!--</customData>-->
			</StandardTile>
			<StandardTile
			    id="tileQueryOT"
				icon="sap-icon://order-status"
				title="查询操作票"
				infoState="Success"  
				press="onQueryCaoZuoPiao">
				<!--<customData>-->
				<!--	<core:CustomData key="targetPage" value="BillInitializationPage">-->
				<!--	</core:CustomData>-->
				<!--</customData>-->
			</StandardTile>
			<StandardTile
			    id="tileUpload"
				icon="sap-icon://hint"
				type="Monitor"
				title="上传离线数据"
				info="最近上传:{/lastUpload}"
				infoState="Success"
				press="onUploadToECCClicked">
			</StandardTile>
			<StandardTile
			    id="tileCreateWT"
				icon="sap-icon://factory"
				title="创建工作票"
				infoState="Success"
				press="onCreateGongZuoPiao">
				<customData>
					<core:CustomData key="targetPage" value="BillInitializationPage">
					</core:CustomData>
				</customData>
			</StandardTile>
			<StandardTile
			    id="tileModifyWT"
				icon="sap-icon://factory"
				title="修改工作票"
				infoState="Error"
				press="onUpdateGongZuoPiao">
				<customData>
					<core:CustomData key="targetPage" value="BillInitializationPage">
					</core:CustomData>
				</customData>
			</StandardTile>
			<StandardTile
			    id="tileQueryWT"
				icon="sap-icon://factory"
				title="查询工作票"
				infoState="Error"
				press="onQueryGongZuoPiao">
				<customData>
					<core:CustomData key="targetPage" value="BillInitializationPage">
					</core:CustomData>
				</customData>
			</StandardTile>
			<StandardTile
			    id="tileGzpUpload"
				icon="sap-icon://hint"
				type="Monitor"
				title="上传离线工作票"
				info="最近上传:{/lastUpload}"
				infoState="Success"
				press="onUploadGZPToECCClicked">
			</StandardTile>
		</TileContainer>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
					<Button icon="sap-icon://wrench"  text="设定工厂" press="handleSelectWerks"   visible="{/IwerkButtonVisible}"/>
					<Text text="{/G_IWERK}"/>
					<Button icon="sap-icon://key" text="设定密码" press="handleSetPassword" visible="{/PinButtonVisible}"/>
					<!--<Button icon="sap-icon://print" text="工作票打印测试" press="onPDFPrintTest"></Button>-->
				<ToolbarSpacer/>
			</Toolbar>
		</footer>
	</Page>
</core:View>