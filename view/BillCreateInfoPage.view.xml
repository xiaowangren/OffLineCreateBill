<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout"
	xmlns:lay="sap.ui.commons.layout"
	xmlns:c="sap.ui.commons"
	xmlns="sap.m" controllerName="com.zhenergy.bill.view.BillCreateInfoPage" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="创建{/dianQiLeiXingValue}">
		<content>
		    <l:VerticalLayout class="BillCreateInfoPage_page_content_VerticalLayout">
		        <lay:MatrixLayout width="40%" widths="15%,30%,25%,25%" class="BillCreateInfoPage_VerticalLayout_MatrixLayout_1">
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:Button text="提交" press="onSubmitBillInfo"></c:Button>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:Button text="参考历史票/典型票"></c:Button>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:Button text="试打印操作票" press="onPrintBillInfo"></c:Button>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:Button text="试打印危险点" press="onPrintDangerousPoint"></c:Button>
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		        </lay:MatrixLayout>
		        <lay:MatrixLayout widths="7%,20%,7%,20%,5%,10%,3%,10%" class="BillCreateInfoPage_VerticalLayout_MatrixLayout_2">
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作票号"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="" width="95%" id="dianQiCaoZuoPiaoHao" editable="false"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="工厂"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="{/dianQiGongChang}" width="95%" id="dianQiGongChang" editable="false" tooltip="{/dianQiGongChang}"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="填写部门"></c:TextView>
		                </lay:MatrixLayoutCell><lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiTianXieBuMen" items="{ path: '/tianxieBuMen'}" width="95%">
								<core:ListItem key="{Appdep}" text="{Appdep} {Appdepdec}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="班组"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiBanZu" items="{ path: '/banZu'}" width="95%">
								<core:ListItem key="{Yxgroup}" text="{Yxgroup} {Yxgroupdec}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <!--<c:CheckBox text="不合格" enabled ="false" id="dianQiBuHeGe"></c:CheckBox>-->
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="类型"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="{/dianQiLeiXing} {/dianQiLeiXingValue}" width="95%" id="dianQiLeiXing" editable="false" tooltip="{/dianQiLeiXing} {/dianQiLeiXingValue}"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作类型"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox width="95%" id="dianQiCaozuoLeiXing">
		                        <c:items>
                                    <core:ListItem text="1 单人操作" key="1"></core:ListItem>
                                    <core:ListItem text="2 监护操作" key="2"></core:ListItem>
                                </c:items>
		                    </c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作性质"></c:TextView>
		                </lay:MatrixLayoutCell><lay:MatrixLayoutCell>
		                    <c:ComboBox width="95%" id="dianQiCaoZuoXingZhi">
		                        <c:items>
                                    <core:ListItem text="1 一般操作" key="1"></core:ListItem>
                                    <core:ListItem text="2 重大操作" key="2"></core:ListItem>
                                </c:items>
		                    </c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <!--<c:CheckBox text="需要值长审核" id="dianQiXuYaoZhiZhangShenHe"></c:CheckBox>-->
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="运行区域"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiYunXingQuYu" items="{ path: '/yunXingQuYu'}" width="95%">
								<core:ListItem key="{Rarea}" text="{Rarea} {Rareadec}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="机组"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiJiZu" items="{ path: '/jiZu'}" width="95%">
								<core:ListItem key="{Unity}" text="{Unity} {Untxt}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="值别"></c:TextView>
		                </lay:MatrixLayoutCell><lay:MatrixLayoutCell>
		                    <c:ComboBox id="dianQiZhiBie" items="{ path: '/ZhiBie'}" width="95%">
								<core:ListItem key="{Dunum}" text="{Dunum} {Dutxt}"></core:ListItem>
							</c:ComboBox>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="状态"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="10 拟票" width="95%" id="dianQiZhuangTai" editable="false"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="开票人"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextField value="" width="95%" id="dianQiKaiPiaoRen"></c:TextField>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView  text="开票日期" ></c:TextView >
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <DateTimeInput
                				    width="95%"
                        			type="DateTime"
                        			displayFormat="yyyy-MM-dd"
                        			valueFormat="yyyyMMdd"
                        			class="sapUiSmallMarginBottom" id="dianQiKaiPiaoRiQi"/>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作任务"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell rowSpan="2" colSpan="4">
		                    <c:TextArea value="" rows="5" cols="55" id="dianQiCaoZuoRenWu"></c:TextArea>
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作开始时间"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
                				<DateTimeInput
                				    width="95%"
                        			type="DateTime"
                        			displayFormat="yyyy-MM-dd HH:mm:ss"
                        			valueFormat="yyyyMMdd HH:mm:ss"
                        			class="sapUiSmallMarginBottom" id="dianQiCaoZuoKaiShiShiJian"/>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="操作结束时间"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell>
		                    <DateTimeInput
                				    width="95%"
                        			type="DateTime"
                        			displayFormat="yyyy-MM-dd HH:mm:ss"
                        			valueFormat="yyyyMMdd HH:mm:ss"
                        			class="sapUiSmallMarginBottom" id="dianQiCaoZuoJieShuShiJian" />
		                </lay:MatrixLayoutCell>

		            </lay:MatrixLayoutRow>
		        </lay:MatrixLayout>
		        <mvc:JSView viewName="com.zhenergy.bill.view.BillCreateInfoTab"/>
		        <lay:MatrixLayout width="100%" widths="5%,30%,25%,35%" class="BillCreateInfoPage_VerticalLayout_MatrixLayout_1">
		            <lay:MatrixLayoutRow>
		                <lay:MatrixLayoutCell>
		                    <c:TextView text="备注"></c:TextView>
		                </lay:MatrixLayoutCell>
		                <lay:MatrixLayoutCell colSpan="3">
		                    <c:TextArea value="" rows="4" cols="150" id="dianQiBeiZhu"></c:TextArea>
		                </lay:MatrixLayoutCell>
		            </lay:MatrixLayoutRow>
		        </lay:MatrixLayout>
		    </l:VerticalLayout>
		</content>
	</Page>
</core:View>