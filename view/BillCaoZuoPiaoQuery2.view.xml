<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:c="sap.ui.commons"
	xmlns:lay="sap.ui.commons.layout"
	xmlns="sap.m" controllerName="com.zhenergy.bill.view.BillCaoZuoPiaoQuery2" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="操作票查询清单页面">
		<content>
		    <f:SimpleForm id="idCaoZuoPiaoQuery2"
				minWidth="1024"
				maxContainerCols="4"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanL="3"
				labelSpanM="3"
				emptySpanL="4"
				emptySpanM="4"
				columnsL="1"
				columnsM="1"
				>
				<f:content>
					<lay:MatrixLayout width="70%" widths="20%,5%,25%,5%,10%,5%,25%">
					    <lay:MatrixLayoutRow>
					       <lay:MatrixLayoutCell>
					            <Button text="返回上一页" press="onFanHui"></Button>
					       </lay:MatrixLayoutCell>
					       <lay:MatrixLayoutCell>
					       </lay:MatrixLayoutCell>
					       <lay:MatrixLayoutCell>
					       		<Button text="执行" press="onCaoZuoPiaoQuery2"></Button>
					       </lay:MatrixLayoutCell>
					    </lay:MatrixLayoutRow>
					    <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="工厂:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell colSpan="2">
    		                    <!--<c:TextField value="{/werkQuery}" editable="false" id="gongChangQuery2"></c:TextField>-->
    		                    <c:ComboBox items="{ path: '/WERKSQuery2'}" width="95%" id="gongChangQuery2" selectedKey="{/werkQuery}" editable="false">
								    <core:ListItem key="{Iwerk}" text="{Iwerk} {Name1}"></core:ListItem>
							    </c:ComboBox>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow id="caoZuoPiaoLeiXingQuerys">
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="操作票类型:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
							    <c:ComboBox id="ricketTypeQuery2"  width="95%" selectedKey="{/caoZuoLeiXingQuery}" editable="false">
								<c:items>
									<core:ListItem key="DQ" text="DQ 电气操作票"></core:ListItem>
									<core:ListItem key="GL" text="GL 锅炉操作票"></core:ListItem>
									<core:ListItem key="HB" text="HB 环保操作票"></core:ListItem>
									<core:ListItem key="HX" text="HX 化学操作票"></core:ListItem>
									<core:ListItem key="QJ" text="QJ 汽机操作票"></core:ListItem>
									<core:ListItem key="RK" text="RK 热控操作票"></core:ListItem>
									<core:ListItem key="RL" text="RL 燃料操作票"></core:ListItem>
									<core:ListItem key="ZS" text="ZS 典型操作票"></core:ListItem>
								</c:items>
							</c:ComboBox>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="状态:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		     <!--               <c:ComboBox id="zhuangTaiQuery1" items="{ path: '/banZu'}" width="95%">-->
								   <!-- <core:ListItem key="{Yxgroup}" text="{Yxgroup}"></core:ListItem>-->
							    <!--</c:ComboBox>-->
							    <c:ComboBox id="zhuangTaiQuery2" width="95%">
    		                        <c:items>
                                        <core:ListItem text="10 拟票" key="10"></core:ListItem>
                                        <core:ListItem text="20 待上传" key="20"></core:ListItem>
                                        <core:ListItem text="30 已上传" key="30"></core:ListItem>
                                    </c:items>
							    </c:ComboBox>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="填写部门:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                    <c:ComboBox id="tianXieBuMenQuery2" items="{ path: '/tianxieBuMenQuery2'}" width="95%">
								    <core:ListItem key="{Appdep}" text="{Appdep} {Appdepdec}"></core:ListItem>
							    </c:ComboBox>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="专业:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                    <c:ComboBox id="zhuanYeQuery2" width="95%">
    		                        <c:items>
                                        <core:ListItem text="0001 汽机专业" key="0001"></core:ListItem>
                                        <core:ListItem text="0002 电气专业" key="0002"></core:ListItem>
                                        <core:ListItem text="0003 锅炉专业" key="0003"></core:ListItem>
                                        <core:ListItem text="0004 化学专业" key="0004"></core:ListItem>
                                        <core:ListItem text="0005 环保专业" key="0005"></core:ListItem>
                                        <core:ListItem text="0006 燃料专业" key="0006"></core:ListItem>
                                        <core:ListItem text="0007 热机专业" key="0007"></core:ListItem>
                                    </c:items>
							    </c:ComboBox>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="机组:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                    <c:ComboBox id="jiZuQuery2" items="{ path: '/jiZuQuery2'}" width="95%">
								    <core:ListItem key="{Unity}" text="{Unity} {Untxt}"></core:ListItem>
							    </c:ComboBox>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="班组:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                    <c:ComboBox id="banZuQuery2" items="{ path: '/banZuQuery2'}" width="95%">
								    <core:ListItem key="{Yxgroup}" text="{Yxgroup} {Yxgroupdec}"></core:ListItem>
							    </c:ComboBox>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="开票日期:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
							    <DateTimeInput
                				    width="95%"
                        			type="DateTime"
                        			displayFormat="yyyy-MM-dd"
                        			valueFormat="yyyyMMdd"
                        			 id="kaiPiaoRiQiQuery2" />
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="开票人:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
							    <c:TextField value="" id="kaiPiaoRenQuery2" width="95%"></c:TextField>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
		                <lay:MatrixLayoutRow>
    		                <lay:MatrixLayoutCell>
    		                    <c:TextView text="操作任务:"></c:TextView>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell>
    		                </lay:MatrixLayoutCell>
    		                <lay:MatrixLayoutCell colSpan="2">
							    <c:TextField value="" id="caoZuoRenWuQuery2" width="95%"></c:TextField>
    		                </lay:MatrixLayoutCell>
		                </lay:MatrixLayoutRow>
					</lay:MatrixLayout>
				</f:content>
			</f:SimpleForm>
		</content>
	</Page>
</core:View>