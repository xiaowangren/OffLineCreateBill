        		                   <Panel>
        		                    <content>
        		                   <Table
    			                    items="{WorkModel>/GroupTab}" 
    			                    visible="{/TableVisible}"
    			                    class="margin_top"
    			                    >
                			            <columns>
                            				<Column
                            					minScreenWidth="Tablet"
                            					demandPopin="true"
                            					width="15px"
                            					 >
                            					<Text text="序号"/>
                            				</Column>
                            				<Column
                            					minScreenWidth="Tablet"
                            					demandPopin="true"
                            					width="110px"
                            					>
                            					<Text text="成员名"/>
                            				</Column>
                            				<Column
                            					minScreenWidth="Tablet"
                            					demandPopin="true"
                            					width="100px"
                            					>
                            					<Text text="备注"/>
                            				</Column>
                            				<Column
                            					minScreenWidth="Tablet"
                            					demandPopin="true"
                            					width="11px"
                            					>
                            					<Text text="操作" visible="{/Editable}"/>
                            				</Column>
                            				<Column
                            					minScreenWidth="Tablet"
                            					demandPopin="true"
                            					width="4px"
                            					>
                            				</Column>
                        			    </columns>
                            			<ColumnListItem>
                            				<cells>
                            					<c:TextField
                            						value="{WorkModel>Seqc}" width="80%" change="onChangeSeqc" editable="{/Editable}"/>
                            					<c:TextField
                            						value="{WorkModel>Pname}" width="100%" editable="{/Editable}"/>
                            					<c:TextField
                            						value="{WorkModel>Opsno}" width="100%" editable="{/Editable}"/>
                            					<c:Button text="新增" press="onAddRow" visible="{/Editable}"></c:Button>
                            					<c:Button text="删除" press="onDeleteRow" visible="{/Editable}"></c:Button>
                            				</cells>
                            			</ColumnListItem>
    		                        </Table>
    		                        </content>
    		                        </Panel>
