        		                <lay:MatrixLayoutCell>
        		                    <c:TextView text="联系方式" visible="{/Lx3Visible}"></c:TextView>
        		                </lay:MatrixLayoutCell>
        		                <lay:MatrixLayoutCell>
        		                    <c:TextField value="{WorkModel>/Phone}" width="60%" editable="{/Editable}" visible="{/Lx3Visible}"></c:TextField>
