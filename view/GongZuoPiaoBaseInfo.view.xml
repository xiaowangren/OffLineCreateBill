        		                    <c:CheckBox text="锤击" checked="{WorkModel>/Cj}" editable="{/Editable}" visible="{/DhfsVisible}" class="span_left"/>
        		                    <c:CheckBox text="破碎" checked="{WorkModel>/Ps}" editable="{/Editable}" visible="{/DhfsVisible}" class="span_left"/>
